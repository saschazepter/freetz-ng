config FREETZ_LIB_libpcre2
	bool "libpcre2 (libpcre2-8.so)"
	default n
	help
		A Perl Compatible Regular Expression library

if FREETZ_LIB_libpcre2

	config FREETZ_LIB_libpcre2_WITH_JIT
		bool "Enable JIT compilation support"
		depends on !FREETZ_KERNEL_VERSION_2_6_39_3  # in execute_cpu_id() cpuid() is called with "inconsistent operand constraints in an 'asm'"
		default n
		help
			Enable Just-In-Time (JIT) compilation support for faster regex execution.
			
			JIT compiles regular expressions to native machine code for better performance,
			which is beneficial for applications like PHP that use regex extensively.
			
			Size impact: Adds approximately 100-150 KB to libpcre2-8.so

endif # FREETZ_LIB_libpcre2

config FREETZ_LIB_libpcre2_posix
	bool "libpcre2-posix (libpcre2-posix.so)"
	select FREETZ_LIB_libpcre2
	default n
	help
		A POSIX wrapper interface to the Perl Compatible Regular Expression
		library

